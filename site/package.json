{
  "name": "cli-docs-site",
  "version": "1.0.0",
  "description": "Docs site for Netlify CLI",
  "private": true,
  "author": "Netlify Inc.",
  "contributors": [
    "David Wells <david.wells@netlify.com> (https://davidwells.io/)",
    "Bret Comnes <bcomnes@gmail.com> (https://bret.io)"
  ],
  "scripts": {
    "start": "npm run sync && run-p start:*",
    "build": "npm run clean && run-s build:*",
    "postbuild": "cp src/_redirects dist/_redirects",
    "build:docs": "node ../scripts/docs.js",
    "build:site": "npm run sync && x0 build src",
    "start:site": "x0 src",
    "start:watch": "node ./watch.js",
    "watch": "node ./watch.js",
    "sync": "node ./sync.js",
    "clean": "rimraf dist"
  },
  "engines": {
    "node": ">=v12.18.3"
  },
  "license": "MIT",
  "dependencies": {
    "@compositor/x0": "^6.0.7",
    "@rebass/mdx": "^1.0.0",
    "cosmiconfig": "^5.2.1",
    "react-helmet": "^5.2.1",
    "react-instantsearch-dom": "^5.7.0",
    "styled-components": "^3.4.10"
  },
  "devDependencies": {
    "fs-extra": "^9.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.7.1",
    "sane": "^4.1.0"
  }
}
